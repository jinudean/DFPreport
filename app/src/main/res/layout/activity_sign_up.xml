<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30"
            android:fontFamily="sans-serif-black"
            android:text="@string/welcome"
            android:textColor="@color/white"
            android:textSize="@dimen/_50"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/signupimage"
                android:src="@drawable/ic_baseline_account_circle_24"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:layout_gravity="center" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginLeft="@dimen/_70"
                android:src="@drawable/ic_baseline_edit_24"
                android:id="@+id/signupcamera"
                android:onClick="startCamera"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30"
                android:width="@dimen/_300"
                android:text="@string/first_name"
                android:textColor="@color/lettersColor"
                android:textSize="@dimen/_20" />

            <EditText
                android:id="@+id/edit_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10sp"
                android:width="@dimen/_300"
                android:textColor="@color/lettersColor"
                android:textSize="@dimen/_20" />

            <TextView
                android:id="@+id/last_name"
                android:width="@dimen/_300"
                android:layout_gravity="center"
                android:textColor="@color/lettersColor"
                android:layout_marginTop="@dimen/_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textSize="@dimen/_20"
                />
            <EditText
                android:id="@+id/edit_last_name"
                android:layout_marginTop="-10sp"
                android:width="@dimen/_300"
                android:textColor="@color/lettersColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20"
                />
            <TextView
                android:id="@+id/employeeNumber"
                android:width="@dimen/_300"
                android:textColor="@color/lettersColor"
                android:layout_marginTop="@dimen/_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/employee_number"
                android:textSize="@dimen/_20"
                />
            <EditText
                android:id="@+id/edit_employee_number"
                android:layout_marginTop="-10sp"
                android:width="@dimen/_300"
                android:textColor="@color/lettersColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20"
                />
            <TextView
                android:id="@+id/stationName"
                android:width="@dimen/_300"
                android:textColor="@color/lettersColor"
                android:layout_marginTop="@dimen/_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/station_name"
                android:textSize="@dimen/_20"
                />
            <EditText
                android:id="@+id/edit_station_name"
                android:layout_marginTop="-10sp"
                android:width="@dimen/_300"
                android:textColor="@color/lettersColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20"
                />
            <TextView
                android:id="@+id/email"
                android:width="@dimen/_300"
                android:textColor="@color/lettersColor"
                android:layout_marginTop="@dimen/_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="@dimen/_20"
                />
            <EditText
                android:id="@+id/edit_email"
                android:layout_marginTop="-10sp"
                android:width="@dimen/_300"
                android:textColor="@color/lettersColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20"
                />
            <TextView
                android:id="@+id/phone"
                android:width="@dimen/_300"
                android:textColor="@color/lettersColor"
                android:layout_marginTop="@dimen/_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textSize="@dimen/_20"
                />
            <EditText
                android:id="@+id/edit_phone"
                android:layout_marginTop="-10sp"
                android:width="@dimen/_300"
                android:inputType="phone"
                android:textColor="@color/lettersColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_25"
                />

        </LinearLayout>

        <Button
            android:id="@+id/get_started_button"
            android:layout_width="@dimen/_200"
            android:layout_height="@dimen/_40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30"
            android:background="@drawable/get_started"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:textSize="@dimen/_20"
            android:layout_marginBottom="@dimen/_30"/>



    </LinearLayout>

</ScrollView>