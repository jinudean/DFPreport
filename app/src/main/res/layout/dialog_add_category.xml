<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/background"
        android:id="@+id/ac_dialog_title"
        android:text="@string/add_category"
        android:textSize="@dimen/_30"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="match_parent"
        android:textColor="@color/background"
        android:layout_height="wrap_content"
        android:hint="@string/ac_cat_hint"
        android:textColorHint="@color/dialogueText"
        android:textSize="25sp"
        android:autofillHints="@string/ac_cat_hint"
        android:id="@+id/ac_dialog_title_edit"
        android:inputType="text" />

</LinearLayout>