<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"

    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="@dimen/_80"
            android:layout_height="@dimen/_80"
            android:layout_gravity="center"
            tools:src="@drawable/ic_baseline_account_circle_24" />

        <ImageView
            android:id="@+id/ecamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30"
            android:layout_marginTop="@dimen/_10"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="@color/colorPrimary" />

        <LinearLayout
            android:layout_marginTop="@dimen/_30"
            android:layout_width="@dimen/_380"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lettersColor" />

            <EditText
                android:id="@+id/firstnameFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/white" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/last_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lettersColor" />

            <EditText
                android:id="@+id/lastnameFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/white" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/license_number"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lettersColor" />

            <EditText
                android:id="@+id/employeeNumberFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:paddingLeft="15sp"
                android:textColor="@color/white" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/company_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lettersColor" />

            <EditText
                android:id="@+id/companyFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="15sp"
                android:textColor="@color/white" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lettersColor" />

            <EditText
                android:id="@+id/emailFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/white" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/lettersColor" />

            <EditText
                android:id="@+id/phoneFrag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/white" />

            <Button
                android:layout_marginTop="@dimen/_30"
                android:layout_marginBottom="@dimen/_30"
                android:id="@+id/Profile_edit"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/save_and_continue" />


        </LinearLayout>

    </LinearLayout>




</ScrollView>